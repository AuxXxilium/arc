# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# YAML
[*.yml]
indent_style = space
indent_size = 2

[*.{c,h}]
indent_style = space
indent_size = 4
